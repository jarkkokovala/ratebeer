<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Average rating</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= "%.1f" % brewery.average_rating %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>