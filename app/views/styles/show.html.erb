<p>
  <strong>Name:</strong>
  <%= @style.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @style.description %>
</p>


<p>
  <% if @style.beers.any? %>
    <% @style.beers.each do |beer| %>
      <li><%= link_to beer.name, beer %></li>
    <% end %>
  <% else %>
    No beers in this style.
  <% end %>
</p>

<%= edit_and_destroy_buttons(@style) %>

<%= link_to 'Back', styles_path, class:"btn btn-primary" %>
