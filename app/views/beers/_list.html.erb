<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th>Average rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style.name %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <td><%= round(beer.average_rating) %>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>