<p>
  <strong>Name:</strong>
  <%= @beerclub.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beerclub.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beerclub.city %>
</p>

<p>
  <% if @beerclub.users.empty? %>
    <strong>No members yet</strong>
  <% else %>
    <strong>Members:</strong>
    <% @beerclub.users.each do |user| %>
      <%= link_to user.username, user %>
    <% end %>
  <% end %>
</p>

